pipeline {
    agent any

    // tools {nodejs "nodejs"}

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                // sh 'npm config ls'
                // sh '/var/jenkins_home/tools/jenkins.plugins.nodejs.tools.NodeJSInstallation/nodejs/bin/yarn install'
                // sh '/var/jenkins_home/tools/jenkins.plugins.nodejs.tools.NodeJSInstallation/nodejs/bin/yarn build'
                sh 'yarn install'
                sh 'yarn build'
                sh 'docker build -t test:latest .'
                echo 'Done!'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                echo 'Done!'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                script {
                    sh "chmod +x -R ${env.WORKSPACE}"
                    sh "${env.WORKSPACE}/scripts/codedeploy/live/api-start.sh"
                    sh "${env.WORKSPACE}/scripts/codedeploy/live/building-start.sh"
                    sh "${env.WORKSPACE}/scripts/codedeploy/live/chat-start.sh"
                    sh "${env.WORKSPACE}/scripts/codedeploy/live/container-start.sh"
                    sh "${env.WORKSPACE}/scripts/codedeploy/live/etc-start.sh"
                    sh "${env.WORKSPACE}/scripts/codedeploy/live/main-start.sh"
                    sh "${env.WORKSPACE}/scripts/codedeploy/live/parser-start.sh"
                    sh "${env.WORKSPACE}/scripts/codedeploy/live/planet-start.sh"
                    sh "${env.WORKSPACE}/scripts/codedeploy/live/rooms-start.sh"
                }
                echo 'Done!'
            }
        }
    }
}
