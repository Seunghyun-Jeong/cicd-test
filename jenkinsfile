pipeline {
    agent any

    tools {
        nodejs 'nodejs'
        dockerTool 'docker'
    }

    stages {
        stage('Build by Dockerfile') {
            steps {
                echo 'Build Start'
                dir('/var/jenkins_home/workspace/cicd-test') {
                    sh 'docker build -t ecr-test .'
                }
                echo 'Done!'
            }
        }

        // stage('Test') {
        //     steps {
        //         echo 'Test Start'
        //         echo 'Done!'
        //     }
        // }

        stage('Upload to ECR') {
            steps {
                echo 'Upload Start'
                script {
                    docker.withRegistry("https://264932596642.dkr.ecr.ap-northeast-2.amazonaws.com", "ecr:ap-northeast-2:aws") {
                        docker.image("ecr-test:latest").push()
                    }
                }
                echo 'Done!'
            }
        }

        stage('ECR to EKS') {
            steps {
                echo 'Deploy Start'
                script {
                    sh 'kubectl create deployment test --image=264932596642.dkr.ecr.ap-northeast-2.amazonaws.com/ecr-test:latest'
                    sh 'kubectl set image deployment/test my-app=264932596642.dkr.ecr.ap-northeast-2.amazonaws.com/ecr-test:latest'
                    sh 'kubectl rollout status deployment/test'
                }
                echo 'Done!'
            }
        }
    }
}
