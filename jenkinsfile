pipeline {
    agent any

    tools {
        nodejs 'nodejs'
        dockerTool 'docker'
    }

    stages {
        stage('Build by Dockerfile') {
            steps {
                echo 'Build Start'
                dir('/var/jenkins_home/workspace/cicd-test') {
                    sh 'docker build -t ecr-test .'
                }
                echo 'Done!'
            }
        }

        stage('Upload to ECR') {
            steps {
                echo 'Upload Start'
                script {
                    docker.withRegistry("https://264932596642.dkr.ecr.ap-northeast-2.amazonaws.com", "ecr:ap-northeast-2:aws") {
                        docker.image("ecr-test:latest").push()
                    }
                }
                echo 'Done!'
            }
        }

        stage('ECR to ECS') {
            steps {
                echo 'Deploy Start'
                script {
                    def clusterName = "test-clus"
                    def serviceName = "test-serv"
                    def taskDefinition = "test-task:latest"
                    sh "aws ecs update-service --cluster ${clusterName} --service ${serviceName} --force-new-deployment --task-definition ${taskDefinition}"
                }
                echo 'Done!'
            }
        }
    }
}
