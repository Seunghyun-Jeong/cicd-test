pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                echo 'done'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                echo 'done'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                script {
                    sh '/scripts/codedeploy/live/api-start.sh'
                    sh '/scripts/codedeploy/live/chat-start.sh'
                    sh '/scripts/codedeploy/live/etc-start.sh'
                    sh '/scripts/codedeploy/live/main-start.sh'
                    sh '/scripts/codedeploy/live/parser-start.sh'
                    sh '/scripts/codedeploy/live/rooms-start.sh'
                }
                echo 'done'
            }
        }
    }
}