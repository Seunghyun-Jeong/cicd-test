pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                echo 'Done.'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                echo 'Done.'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                script {
                    sh "chmod +x -R ${env.WORKSPACE}"
                    sh "/var/jenkins_home/workspace/cicd-test/scripts/codedeploy/live/api-start.sh"
                    sh "/var/jenkins_home/workspace/cicd-test/scripts/codedeploy/live/chat-start.sh"
                    sh "${env.WORKSPACE}/scripts/codedeploy/live/etc-start.sh"
                    sh "${env.WORKSPACE}/scripts/codedeploy/live/main-start.sh"
                    sh "${env.WORKSPACE}/scripts/codedeploy/live/parser-start.sh"
                    sh "${env.WORKSPACE}/scripts/codedeploy/live/rooms-start.sh"
                }
                echo 'Done.'
            }
        }
    }
}